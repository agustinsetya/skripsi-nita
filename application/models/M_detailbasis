<?php
defined('BASEPATH') OR exit('No direct script access allowed');

class M_detailbasis extends CI_Model {

	public function __construct()
	{
		parent::__construct();
	}

	public function readDetail(){
		$query=$this->db->get('tb_detail_basis_pengetahuan');
		return $query->result();
	}

	public function insertDetail(){
		$object=array(
			'id_detail_basis_pengetahuan' => $this->input->post('id_detail_basis_pengetahuan'),
			'id_gejala'=>$this->input->post('id_gejala')
		);
		$this->db->insert('tb_detail_basis_pengetahuan',$object);
	}
	
	public function getDetail($id_detail){
		$this->db->where('id_detail',$id_detail);
		$query= $this->db->get('tb_detail_basis_pengetahuan');
		return $query->result();
	}

	public function UpdateById($id_detail)
	{
		$data = array
		(
			'id_detail' => $id_detail,
			'id_gejala'=>$this->input->post('id_gejala')
		);
		$this->db->where('id_detail',$id_detail);
		$this->db->update('tb_detail_basis_pengetahuan',$data);
	}

	public function delete($id_detail)
	{
		$this->db->where('id_detail', $id_detail);
		$this->db->delete('tb_detail_basis_pengetahuan');
	}

	public function getBasisQueryObject(){
	  $query=$this->db->query('SELECT * FROM tb_detail_basis_pengetahuan');
	  return $query->result();
	 }



}
